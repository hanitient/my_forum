<% provide(:title, '注册') %>

<h1>注册</h1>

<div class="row">

<div class="col-md-6 col-md-offset-3">

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>

<!--
<%= f.label :invitation,"邀请码" %>
<%= f.text_field :invitation, class: 'form-control' %>
-->

<%= f.label :name,"用户名" %>
<%= f.text_field :name ,class: 'form-control'%>

<%= f.label :email, "邮箱"%>
<%= f.text_field :email , class: 'form-control',placeholder:"用于验证和取回密码的邮箱"%>

<%= f.label :address1, "收货地址"%>
<%= f.text_field :address1 , class: 'form-control',placeholder:"请填写正确的地址以便于快递收货"%>

<%= f.label :address2, "备选收货地址（可选）"%>
<%= f.text_field :address2 , class: 'form-control'%>

<%= f.label :password ,"密码"%>
<%= f.password_field :password, class: 'form-control' ,placeholder:"密码长度至少6位"%>

<%= f.label :password_confirmation, "确认密码" %>
<%= f.password_field :password_confirmation , class: 'form-control'%>

<%= f.submit "确认注册", class: "btn btn-default" ,id:"regbutton2"%>
<% end %>

</div>

</div>